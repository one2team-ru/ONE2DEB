{
    "Regex":
    {
        "List sections":
        {
            "Match": "/sections",
            "Weight": 50,
            "Service": "Entity.Catalog",
            "Method": "Do",
            "Call":
            {
                "Entity": "Package",
                "Key": "Meta.Section",
                "Where":
                {
                    "X-Private": "No"
                }
            }
        },
        "List packages":
        {
            "Match": "/packages/page(.+)",
            "Weight": 50,
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Package",
                "Page": "$1",
                "Where":
                {
                    "X-Private": "No"
                },
                "Sort":
                {
                    "Meta.Package": true
                }
            }
        },
        "List packages from section":
        {
            "Match": "^/packages/section/(.+)$",
            "Weight": 50,
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Package",
                "Custom Templates":
                {
                    "List": "Section",
                    "Table": "SectionTable"
                },
                "Section": "$1",
                "Template": "Section",
                "Where":
                {
                    "X-Private": "No",
                    "Meta.Section": "$1"
                },
                "Sort":
                {
                    "Meta.Package": true
                }
            }
        },
        "List packages from section, pages":
        {
            "Match": "^/packages/section/(.+)/page(.+)$",
            "Weight": 50,
            "Service": "Entity.List",
            "Method": "Do",
            "Call":
            {
                "Entity": "Package",
                "Custom Templates":
                {
                    "List": "Section",
                    "Table": "SectionTable"
                },
                "Page": "$2",
                "Template": "Section",
                "Where":
                {
                    "X-Private": "No",
                    "Meta.Section": "$1"
                },
                "Sort":
                {
                    "Meta.Package": true
                }
            }
        },
        "Show packages":
        {
            "Match": "/package/(.+)/(.+)",
            "Service": "Entity.Show.Static",
            "Method": "Do",
            "Call":
            {
                "Entity": "Package",
                "Where": {
                    "Meta.Package": "$1",
                    "Meta.Architecture": "$2",
                    "X-Private": "No"
                }
            }
        },
        "Private List":
        {
            "Match": "^/(.+)/binary/Packages$",
            "Service": "Package.List",
            "Method": "Generate",
            "Call":
            {
                "Key": "$1",
                "Renderer":
                {
                    "Service": "View.Plaintext",
                    "Method": "Render"
                }
            }
        },
        "Download":
        {
            "Match": "/download/(.+)",
            "Service": "Package.Download",
            "Method": "Do",
            "Call":
            {
                "Renderer":
                {
                    "Service": "View.File",
                    "Method": "Render"
                },
                "Where":
                {
                    "File": "$1",
                    "X-Private": "No"
                }
            }
        },
        "Download private":
        {
            "Match": "^/(.+)/download/(.+)$",
            "Weight": 50,
            "Service": "Package.Download",
            "Method": "Do",
            "Call":
            {
                "Renderer":
                {
                    "Service": "View.File",
                    "Method": "Render"
                },
                "Where":
                {
                    "File": "$2"
                },
                "Key": "$1"
            }
        }
    }
}